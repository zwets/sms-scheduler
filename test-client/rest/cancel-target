#!/bin/bash

export LC_ALL="C"
set -euo pipefail

CONTEXT=/schedule

# Source shared functions, default settings, and public keys for encryption
LIB_DIR="$(dirname "$(realpath "$0")")/../lib"
. "$LIB_DIR/settings.sh"

USAGE="CLIENT TARGET

  Remove all scheduled SMS for TARGET in CLIENT

  POSITIONAL PARAMS
   CLIENT         Unique client ID
   TARGET         Identifies SMS destination"

. "$LIB_DIR/rest-lib.sh"

(($# == 2)) || usage_exit 1

rest_DELETE /$1/$2
